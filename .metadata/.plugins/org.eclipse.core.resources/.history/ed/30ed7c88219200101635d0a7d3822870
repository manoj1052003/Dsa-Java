package july;

public class Class1 {

	public static void main(String[] args) {
		int rows = 7;
		for(int i=1; i<=rows; i++) {
			for(int j=1; j<=rows-i; j++) {
				System.out.print(" "+" ");
			}
			int k = 5;
			for(int j=1; j<=i; j++) {
				System.out.print((char)(k+64)+" ");
				k--;
			}
			System.out.println();
		}

	}

}
