package com.july24;

public class rec2 {
	
	public static int print_sum(int num,int sum) {
		if(num==0) {
			return sum;
		}
		return print_sum(num-1,sum+num);
		
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 5;
		int sum = print_sum(num,0);
		System.out.println(sum);
	}

}
