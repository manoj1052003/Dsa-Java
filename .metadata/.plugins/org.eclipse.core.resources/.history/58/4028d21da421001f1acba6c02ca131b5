package com.april;

public class studhappy {
	
	public static int check_happy(int num) {
		int res = 0;
		while(num>0) {
			int rem = num % 10;
			res = (rem* rem)+res;
			num = num / 10;
		}
		return res;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 7;
		int res = check_happy(num);
		while(res!=1 && res!=4) {
			res = check_happy(res);
		}
		if(res==1) {
			System.out.println("its happy");
		}
		else {
			System.out.println("its not");
		}

	}

}
