package com.csr;

public class heart {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int rows=5;
		int k=1;
		for (int i=1; i<=rows;i++) {
			for (int j=0;j<i;j++) {
				if(k==1) {
					System.out.print("1"+" ");
					k=0;
				}
				else {
					System.out.print("0"+" ");
					k=1;
				}
			}
			System.out.println();
		}
	}

}
