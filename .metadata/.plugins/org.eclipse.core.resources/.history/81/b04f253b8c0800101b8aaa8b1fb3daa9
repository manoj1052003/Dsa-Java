package com.jan26;

import java.util.Arrays;

public class class14num4 {
	
	public static char [] con_char_array(String s) {
		char [] arr = new char [s.length()];
		for(int i=0; i<s.length(); i++) {
			arr[i] = s.charAt(i);
		}
		return arr;
	}
	
	public static void sort_array(char [] arr) {
		for(int i=0; i<arr.length; i++) {
			for(int j=0; j<arr.length-1;j++) {
				if(arr[j] > arr[j+1]) {
					char temp = arr[j];
					arr[j] = arr[j+1];
					arr[j+1] = temp;
				}
			}
		}
	}
	
	public static void main(String[] args) {
		String s1 = "silent";
		String s2 = "listen";
		
		char [] arr1 = con_char_array(s1);
		char [] arr2 = con_char_array(s2);
		
		sort_array(arr1);
		sort_array(arr2);
		
		if(Arrays.equals(arr1, arr2)) {
			System.out.println("its anagram");
		}
		else {
			System.out.println("its not");
		}
		
	}

}
