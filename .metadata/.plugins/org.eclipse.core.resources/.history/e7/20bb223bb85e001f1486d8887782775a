package com.kiran;

public class dj { 

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s = "aaabbccdd";//a3b2c2d2
		int i = 0;
		int j = 0;
		int count=1;
		while(i<s.length()) {
			String res = "";
			while(j<s.length()) {
				if(s.charAt(i)==s.charAt(j+1)) {
					res = s.substring(i, j);
					count++;
					j++;
				}
				else {
					System.out.print(res+count);
					count=0;
					i=j;
					break;
				}
			}

		}
		
		
	}

}
