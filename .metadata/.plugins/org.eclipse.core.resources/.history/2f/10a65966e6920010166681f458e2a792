package july;

public class class2 {

	public static void main(String[] args) {
		int rows = 5;
		for(int i=1; i<=rows; i++) {
			for(int j=1; j<=(2*rows)-1; j++) {
				if((i+j==6) || (j-i==4) || (i==rows && j%2==1)) {
					System.out.print("*"+" ");
				}
				else {
					System.out.println(" "+" ");
				}
			}
			System.out.println();
		}

	}

}
