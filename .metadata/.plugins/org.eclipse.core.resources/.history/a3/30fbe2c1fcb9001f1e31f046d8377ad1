package com.sepnov;

public class class15 {
	
	public static int c_digit(int num, int count) {
		if(num==0) {
			return count;
		}
		return c_digit(num/10,count+=1);
	}
	
	public static int c_arm(int num, int digit, int res) {
		if(num==0) {
			return res;
		}
		return c_arm(num/10, digit, res+ (int)Math.pow((num%10), digit));
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 153;
		int digit = c_digit(num,0);
		System.out.println(digit);
		System.out.println(c_arm(num,digit, 0));
	}
}