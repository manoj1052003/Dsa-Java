package com.graph;

import java.util.ArrayList;

class AdjMat{
	
	int Nodes;
	int [] [] arr;
	
	AdjMat(int Nodes) {
		arr = new int [Nodes][Nodes];
		this.Nodes = Nodes;
	}
	
	public void add_edge(int src, int des) {
		arr[src][des] = 1;
		arr[des][src] = 1;
	}
	
	public void print() {
		for(int i=0; i<arr.length; i++) {
			for(int j=0; j<arr.length; j++) {
				System.out.print(arr[i][j]+" ");
			}
			System.out.println();
		}
	}
	
}

class AdjList{
	int Nodes;
	ArrayList<ArrayList<Integer>> list;
	AdjList(int Nodes) {
		list = new ArrayList<>();
		for(int i=0; i<Nodes; i++) {
			list.add(new ArrayList<>());
		}
	}
	
	public void add_edge(int src, int des) {
		list.get(src).add(des);
		list.get(des).add(src);
	}
	
	public void print() {
		for(int i=0; i<list.size(); i++) {
			System.out.print(i +"--->");
			System.out.println(list.get(i));
		}
	}
	
}

public class Second {

	public static void main(String[] args) {
		AdjMat am = new AdjList(6);
		am.add_edge(0, 1);
		am.add_edge(0, 2);
		am.add_edge(1, 3);
		am.add_edge(1, 4);
		am.add_edge(2, 4);
		am.add_edge(4, 5);
		am.add_edge(3, 5);
		//am.print();

	}

}
