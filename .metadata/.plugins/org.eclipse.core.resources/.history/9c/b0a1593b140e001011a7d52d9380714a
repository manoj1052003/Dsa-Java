package com.grooming;

public class kanini {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int [] arr = {1,2,4,1,2};
		int m_can = 1;
		int sum = 0;
		for(int i=0; i<arr.length; i++) {
			if(i==0) {
				sum += m_can;
			}
			else if(arr[i]>arr[i-1]) {
				m_can++;
				sum += m_can;
			}
			else {
				m_can = 1;
				sum +=m_can;
			}
		}
		System.out.println(sum);
		
	}

}
