package com.april;
import java.util.*;

public class anticlockrotate {
	public static void clock(int [] arr) {
		int temp = arr[arr.length-1];
		for(int i=arr.length-2; i>=0; i--) {
			arr[i+1]=arr[i];
		}
		arr[0]=temp;
	}
	
	public static void anti_clock(int [] arr) {
		int temp = arr[0];
		for(int i=1; i<arr.length; i++) {
			arr[i-1]=arr[i];
		}
		arr[arr.length-1]=temp;

	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		// rotate array for k times in anti_clock direction
		int [] arr = {12,23,34,45,56,67,78};
		int k =70%arr.length;
		for(int i=1; i<=k;i++) {
			clock(arr);
		}
		System.out.println(Arrays.toString(arr));

		
		
		

	}

}
