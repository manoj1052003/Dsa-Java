	public static void upper(String s) {//hello
		for(int i=0; i<s.length(); i++) {
			if(i==0) {
				System.out.print((char)(s.charAt(i)-32));
			}
			else {
				System.out.print(s.charAt(i));
			}
			
		}
	}

	public static void main(String[] args) {
		String a = "hello";
		upper(a);
		
		
		
		
		
		
		
		
