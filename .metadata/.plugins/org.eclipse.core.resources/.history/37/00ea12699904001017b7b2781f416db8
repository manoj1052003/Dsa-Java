package com.jan26;

public class class14num4 {
	
	public static int rec_arm(int num, int res, int digit) {
		if(num==0) {
			return res;
		}
		return rec_arm(num/10, (int)Math.pow(num%10, digit)+res,digit);
	}

	public static int rec_count_digit(int num,int digit) {
		if(num==0) {
			return digit;
		}
		return rec_count_digit(num/10, ++digit);
	} 
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 153;
		int digit = rec_count_digit(num,0);
		int arm = rec_arm(num, 0, digit);
		System.out.println(arm);
	}

}
