package com.kiran;

public class dj { 

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s = "aaabbccdd";//a3b2c2d2
		int i = 0;
		int j = 0;
		int count=0;
		while(i<s.length()) {
			String res = "";
			while(j<s.length()) {
				if(s.charAt(i)==s.charAt(j)) {
					//res = s.substring(i, j+1);
					count++;
					j++;
				}
				else {
					System.out.print(s.charAt(i));
					System.out.print(count);
					count=0;
					i=j;
					break;
				}
			}
			
		}
		System.out.print(s.charAt(i));
		System.out.print(count);
		
		
		
	}

}
