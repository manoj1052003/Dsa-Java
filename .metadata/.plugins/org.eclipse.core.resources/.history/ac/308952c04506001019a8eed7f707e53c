package com.jan26;

public class class14num4 {
	
	public static void main(String[] args) {
		
		int [] [] arr = {{1,2,3,},{4,5,6},{7,8,7}};
		int l_sum = 0;
		int r_sum = 0;
		for(int i=0; i<arr.length; i++) {
			for(int j=0; j<arr.length; j++) {
				if(i==j) {
					l_sum+=arr[i][j];
				}
				if(i+j==arr.length-1) {
					r_sum+=arr[i][j];
				}
			}
		}
		System.out.println(Math.abs(r_sum-l_sum));
	}

}
