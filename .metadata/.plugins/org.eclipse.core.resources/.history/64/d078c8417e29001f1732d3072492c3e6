package com.strings;

public class substringgg {
	
	public static String reverse(String s) {
		String rev = "";
		for(int i=0; i<s.length(); i++) {
			char c = s.charAt(i);
			rev = c + rev;
		}
		return rev;
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s = "malayalam";
		int longest = 0;
		String last = "";
		for (int i=0; i<s.length();i++) {
			//String res = "";
			for (int j=i; j<s.length();j++) {
				//res = res + s.charAt(j);
				//System.out.println(res);
				String res = (s.substring(i,j+1));
				String rev = reverse(res);
				if(rev.equals(res) && rev.length()>longest) {
					last = res;
				}
				
			}
		}
		System.out.println(last);
		
	}

}
