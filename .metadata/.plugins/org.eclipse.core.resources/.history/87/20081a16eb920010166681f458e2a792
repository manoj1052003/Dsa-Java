package july;

public class class2 {

	public static void main(String[] args) {
		int rows = 4;
		int sum = 0;
		for(int i=1; i<=rows; i++) {
			sum += i;
		}
		int k = sum;
		for(int i=1; i<=rows; i++) {
			for(int j=1; j<=i; j++) {
				System.out.print(k+" ");
				k--;
			}
			System.out.println();
		}
	}

}
