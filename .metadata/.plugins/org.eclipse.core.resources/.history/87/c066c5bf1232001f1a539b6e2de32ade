package com.june;

public class pattern2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int rows = 9;
		int k = 65;
		for (int i=1; i<=rows; i++) {
			for(int j=1; j<=(rows-i); j++) {
				System.out.print(" "+" ");
			}
			for(int j=1; j<=i; j++) {
				System.out.print(rows+1-j+" ");
			}
			for(int j=(i-1); j>=1; j--) {
				System.out.print(rows+1-j+" ");
			}
			System.out.println();
		}
	}

}
