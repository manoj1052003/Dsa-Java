package com.LLbasics;

class Node {
	int data;
	Node next;

	Node(int data) {
		this.data = data;
		this.next = null;
	}
}

class SLL {

	Node head;

	public void add_last(int data) {
		Node temp = new Node(data);
		if (head == null) {
			head = temp;
		} else {
			Node curr = head;
			while (curr.next != null) {
				curr = curr.next;
			}
			curr.next = temp;
		}
	}

	public void delete_last() {
		if (head == null) {
			System.out.println("ll is already empty");
		} else if (head.next == null) {
			head = null;
		} else {
			Node curr = head;
			while (curr.next.next != null) {
				curr = curr.next;
			}
			curr.next = null;
		}
	}
	
	public void add_at_index(int index, int data) {
		
		if(index < 0 || index > size()) {
			System.out.println("inv index");
			return;
		}
		if(index == 0) {
			add_first(data);
		}
		else if(index == size()) {
			add_last(data);
		}
		else {
			Node curr = head;
			for(int i=0; i<index-1; i++) {
				curr = curr.next;
			}
			Node temp = new Node(data);
			temp.next = curr.next;
			curr.next = temp;
		}
		
	}
	
	public void add_first(int data) {
		Node temp = new Node(data);
		temp.next = head;
		head = temp;
		
	}
	
	public void delete_first() {
		if(head == null) {
			System.out.println("its already empty");
			return;
		}
		head = head.next;
	}
	
	public int get_first() {
		if(head == null) {
			System.out.println("its already empty");
			return -1;
		}
		return head.data;
	}
	
	public int get_last() {
		if (head == null) {
			System.out.println("ll is already empty");
			return -1;
		}  else {
			Node curr = head;
			while (curr.next!= null) {
				curr = curr.next;
			}
			return curr.data;
		}
	}

	public void print() {
		Node curr = head;
		while (curr != null) {
			System.out.print(curr.data + " ");
			curr = curr.next;
		}
		System.out.println();
	}
	
	public int size() {
		Node curr = head;
		int count = 0;
		while (curr != null) {
			count++;
			curr = curr.next;
		}
		return count;
	}
	
	
}

public class First {

	public static void main(String[] args) {
		SLL sll = new SLL();
		sll.add_last(10);
		sll.add_last(20);
		sll.add_last(40);
		sll.add_last(30);
		sll.print();
		sll.add_at_index(2, 99);
		sll.print();

	}

}
