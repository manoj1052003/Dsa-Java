package com.sepnov;

public class class3 {

	public static void main(String[] args) {
		// switch
		int rows = 5;
		int sum = 0;    // sum = 0
		for(int i=1; i<=rows; i++) {
			sum = sum + i;   //sum = 3
			int temp = sum;
			for(int j=1; j<=i; j++) {
				System.out.print(temp+" ");
				temp--;
			}
			System.out.println();
		}
		
	}

}
