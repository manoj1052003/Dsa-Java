package com.numbers;


public class classmeth {
	
	public static void rev(int num) {//123
		int res = 0;//0
		while(num!=0) {
			int rem = num % 10;//3
			res = (res * 10) + rem;//3
			num = num / 10;//12
		}
		System.out.println(res);
	}
	
	public static void rec_rev(int num,int res) {//0,321
		if(num == 0) {
			System.out.println(res);
			return;
		}
		rec_rev(num/10, (res * 10) + num%10);//0,321
	}
	
	public static int count_digit(int num) {
		int count = 0;
		while(num != 0 ) {
			num = num / 10;
			count++;
		}
		return count;
	}
	
	
	public static int arm(int num) {
		int digit = count_digit(num);
		int res = 0;
		while(num!=0) {
			int rem = num % 10;
			res = (int)Math.pow(rem, digit)+res;
			num = num / 10;
		}
		return res;
	}
	
	public static int rec_arm(int num,int res, int digit) {
		if(num == 0) {
			return res;
		}
		return rec_arm(num/10, res+(int)Math.pow(num%10, digit), digit);
	}
	
	public static void main(String[] args) {
		int num = 153;
		int res = rec_arm(num,0,count_digit(num));
		if(num == res) {
			System.out.println("its armstrong");
		}
		else {
			System.out.println("its not");
		}
		
	}
}
