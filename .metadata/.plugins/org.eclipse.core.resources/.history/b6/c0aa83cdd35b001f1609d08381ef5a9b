package com.kiran;

public class nearestpalin {
	
	public static int find_ans(int num) {
		int res = 0;
		while(num!=0) {
			int rem = num % 10;
			res = (res * 10) + rem;
			num/=10;
		}
		return num;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 125;
		int k = 1;
		int fi;
		while(true) {
			int res = find_ans(k);
			//System.out.println(k);
			if(res == k) {
				System.out.println(k);
				break;
			}
			k++;
		}
		System.out.println(k);
		
	}

}
