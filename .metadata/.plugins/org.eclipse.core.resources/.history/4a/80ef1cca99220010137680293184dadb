package com.sepnov;

import java.util.Arrays;

public class num1 {

	public static void main(String[] args) {
		int [] arr = {-5,2,7,-4,12,-1};
		int max_sum = arr[0];
		int sum = 0;
		for(int i=0; i<arr.length; i++) {
			if(sum<0) {
				sum = 0;
			}
			sum+=arr[i];
			if(sum>max_sum) {
				max_sum = sum;
			}
		}
		System.out.println(max_sum);

	}

}
