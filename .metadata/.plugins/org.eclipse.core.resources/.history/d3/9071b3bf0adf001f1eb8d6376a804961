package com.student.app;

import java.util.Scanner;

import com.student.dao.StudentDAO;
import com.student.dao.StudentDAOimp;
import com.student.dto.Student;

public class Update {
	
	public static void updateUser(Student s) {
		System.out.println(s.getPassword());
		StudentDAO sdao = new StudentDAOimp();
		Scanner sc = new Scanner(System.in);
		int choice = 0;
		System.out.println("enter choice");
		
		do {
		
		System.out.println("1 : Name");
		System.out.println("2 : phone");
		System.out.println("3 : mail");
		System.out.println("4 : branch");
		System.out.println("5 : location");
		System.out.println("6 : password");
		System.out.println("7 : back to dashboard");
		
		
		choice = sc.nextInt();
		boolean res = false;
		int ex2 = 0;
		switch(choice) {
		case 1:
			System.out.println("enter the name to be update");
			s.setName(sc.next());
			res = sdao.updatestudent(s);
			break;
		case 2:
			System.out.println("enter the phone no to be update");
			s.setPhone(sc.nextLong());
			res  = sdao.updatestudent(s);
			break;
		case 3:
			System.out.println("enter the Mail to be update");
			s.setMail(sc.next());
			res  = sdao.updatestudent(s);
			
			break;
		case 4:
			System.out.println("enter the branch to be update");
			s.setBranch(sc.next());
			res  = sdao.updatestudent(s);
			break;
		case 5:
			System.out.println("enter the Location to be update");
			s.setLoc(sc.next());
			res  = sdao.updatestudent(s);
			break;
		case 6:
			System.out.println("enter the password to be update");
			s.setPassword(sc.next());
			res = sdao.updatestudent(s);
			break;
		case 7:
			System.out.println("thanks");
			res = true;
			break;
			
		default:
			System.out.println("Invalid choice");
			ex2 = 1;
			break;
		}
		if(res && ex2!=1) {
			System.out.println("updated succc");
		}
		else {
			System.out.println("failed to update");
		}
		
	}
		while(choice!=7);
		}
	
}
