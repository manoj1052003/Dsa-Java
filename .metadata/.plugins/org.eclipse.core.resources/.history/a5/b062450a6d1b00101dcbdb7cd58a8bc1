package com.GeneratePdf.basic;

import java.io.FileNotFoundException;
import java.io.FileOutputStream;

import com.itextpdf.text.Element;

import com.itextpdf.text.BaseColor;
import com.itextpdf.text.Document;
import com.itextpdf.text.DocumentException;
import com.itextpdf.text.Font;
import com.itextpdf.text.Paragraph;
import com.itextpdf.text.pdf.PdfWriter;

public class FirstTest {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Document d = new Document();
		
		try {
			FileOutputStream fos = new FileOutputStream("C:\\Users\\hp\\Desktop\\first.pdf");
			
			PdfWriter.getInstance(d, fos);
			
			Font f = new Font(Font.FontFamily.COURIER,20,Font.BOLD,BaseColor.PINK);
			
			Paragraph p = new Paragraph("welcome to whatever",f);
			
			d.open();
			
			d.add(p);
			
			d.close();
			
			System.out.println("download aagide guru");
			
			
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (DocumentException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		

	}

}
