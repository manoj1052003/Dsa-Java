package com.july;

public class maxsumofsubarray {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr[] = {-7,2,4,-3,5,1,-6};
		int max= arr[0];
		for(int i=0; i<arr.length; i++) {
			int sum = 0;
			for(int j=i; j<arr.length;j++) {
				sum+=arr[j];
				if(sum>max) {
					max=sum;
				}
				System.out.println(sum);
			}
		}
		
	}

}
