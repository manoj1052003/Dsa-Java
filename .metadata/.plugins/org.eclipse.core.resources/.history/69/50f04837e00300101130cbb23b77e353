package com.jan26;

public class class14num4 {
	
	public static int c_digit(int num) {
		int digit = 0;
		while(num!=0) {
			num = num / 10;
			digit++;
		}
		return digit;
	}
	
	public static int arm(int num) {
		int res = 0;
		int digit = c_digit(num);
		while(num!=0) {
			
			int rem = num % 10;
			res = (int)Math.pow(rem, digit)+res;
			num = num / 10;
			digit--;
		}
		return res;
	}
	
	public static int add_digit(int num) {
		int res = 0;
		while(num!=0) {
			int rem = num % 10;
			res = res+ rem;
			num/=10;
		}
		return res;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 12;
		int sq = (num * num);
		int res = add_digit(sq);
		if(num==res) {
			System.out.println("its is");
		}
		else {
			System.out.println("its not");
		}
		
	}

}
