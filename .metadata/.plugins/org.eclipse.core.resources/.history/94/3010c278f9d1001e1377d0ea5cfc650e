package com.strings;

public class replaceword {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String str = "india is my country";
		String rep = "india";
		String nstr = "bharath";
		String word = "";
		
		for (int i=0; i <str.length(); i++) {
			char c = str.charAt(i);
			if (c == 32) {
				if(word.equals(rep)) {	
					System.out.print(nstr);
					word= " ";
				}
				else {
					System.out.print(word);
					word = " ";
				}
				
			}
			else {
				word = word +c;
				
			}
		}
		System.out.print(word);

	}

}
