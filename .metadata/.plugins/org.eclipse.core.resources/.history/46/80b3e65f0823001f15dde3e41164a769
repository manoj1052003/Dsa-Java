package com.strings;

public class palsublongest1 {
	
	public static boolean check_palindrome(String s) {
		int i=0;
		int j=s.length()-1;
		while(i<j) {
			if(s.charAt(i)!=s.charAt(j)) {
				return false;
			}
		}return true;
		
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s = "malayalam";
		String longest = "";
		for (int i=0; i<s.length();i++) {
			String res = "";
			for (int j=i; j<s.length();j++) {
				res = res + s.charAt(j);
				//System.out.println(res);
				boolean ans = check_palindrome(res);
				if(ans == true && res.length()>longest.length()) {
					longest = res;
				}	
			}
		}
		System.out.println(longest);
	}

}
