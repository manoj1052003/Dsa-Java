package com.csr;

public class recarmstrong {
	
	public static int find_digit(int num) {
		int digit=0;
		while(num>0) {
			num/=10;
			digit++;
		}
		return digit;
	}
	
	
	public static int arm(int num,int res,int digit) {
		if(num==0) {
			return res;
		}
		return arm(num/10,res+Math.pow((num%10),digit),digit);
			
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num=1634;
		int res=0;
		int digit=find_digit(num);
		int ans = arm(num,res,digit);
		System.out.println(ans);

	}

}
