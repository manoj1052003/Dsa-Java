package com.csr;
import java.util.Scanner;

public class operatrs {

	public static void main(String[] args) {
	
		Scanner sc = new Scanner(System.in);
		System.out.println("enter no of stars: ");
		int n = sc.nextInt();
		
		
		for (int i=1; i<=n; i++) {
			int k = 65+i-1;
			
			for (int j=1; j<=n-i; j++) {
				System.out.print(" "+" ");
			}
			char c = (char)k;
			for (int j=1; j<=i; j++) {
				System.out.print(c+" ");
				c--;
			}
			
			System.out.println();
			
			
		}
			
	}
		
}

