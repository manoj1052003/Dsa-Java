package com.DSA;

class Node{
	int data;
	Node next;
	Node(int data){
		this.data = data;
		this.next = null;
	}
}

class Linked_list{
	static Node head;
	static void add(int e) {
		Node temp = new Node(e);
		if(head == null) {
			head = temp;
		}
		else {
			Node curr = head; 
			while(curr.next!=null) {
				curr = curr.next;
			}
			curr.next = temp;
		}
	}
	
	static void add_first(int e) {
		Node temp = new Node(e);
		if(head == null) {
			head = temp;
		}
		else {
			temp.next = head;
			head = temp;
		}
		
	}
	
	static void add_atindex(int e,int ind) {
		Node temp = new Node(e);
		if(ind==0) {
			add_first(e);
		}
		else {
			int count = 0;
			Node curr = head;
			while(count<ind-1) {
				curr=curr.next;
				count++;
			}
			temp.next=curr.next;
			curr.next = temp;
		}
		
	}
	
	static void dlt_first() {
		if(head==null) {
			System.out.println("no ele in ll");
		}
		else {
		Node curr = head;
		head = curr.next;
		}
	}
	
	static int find_size() {
		int count = 0;
		Node curr = head;
		while(curr!=null) {
			curr=curr.next;
			count++;
		}
		return count;
		
	}
	
	static void dlt_index(int ind) {
		if(ind==0) {
			dlt_first();
		}
		if(ind >=Linked_list.find_size()) {
			System.out.println("index correct kodo bolimagne");
		}
		else {
			Node curr = head;
			int count = 0;
			Node temp = curr.next;
			while(count!=ind-1) {
				curr = curr.next;
				count++;
			}
			curr.next = curr.next.next;
		}
		
		
		
	}
	
	
	static void print_ll() {
		
		if(head == null) {
			System.out.println("ll is empty");
		}
		else {
			Node curr = head;
			while(curr!=null) {
				System.out.println(curr.data);
				curr = curr.next;
			}
		}
	}
}


public class first {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//Linked_list ll = new Linked_list();
		Linked_list.add(10);
		Linked_list.add(20);
		Linked_list.add(30);
		Linked_list.add(40);
		Linked_list.dlt_index(4);
		int len = Linked_list.find_size();
		System.out.println(len);
		
		Linked_list.print_ll();
		
	}

}
