package com.sepnov;

import java.util.Arrays;

public class num1 {
	
	public static void conv_array(String s) {
		char [] arr = new char[s.length()];
		for(int i=0; i<s.length(); i++) {
			arr[i] = s.charAt(i);
		}
		System.out.println(Arrays.toString(arr));
	}
	
	public static void main(String[] args) {
		
		String s1 = "listen";
		conv_array(s1);
		
		
		
		
