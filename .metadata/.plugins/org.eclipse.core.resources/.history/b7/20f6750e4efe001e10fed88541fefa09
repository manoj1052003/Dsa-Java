package com.pattern;

import java.util.Scanner;

public class secondpro {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int rows = 5;
		
		int k = 1;
		
		for (int i=1; i<=5; i++)
		{
			for (int j=0; j<i; j++)
			{
				System.out.print(k+" ");
				k=k*2;
			}
			System.out.println();
		}
		
		for (int i = 1; i <=rows-1; i++) {
			
			for (int j=1; j<=rows-i; j++) {
				
				System.out.print("*"+" ");
			}
			
			System.out.println();
		}
	}
}
