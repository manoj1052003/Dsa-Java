package com.basicop;

public class Class1assign {
	
	public static int rec_count_digit(int num,int count) {
		if(num == 0) {
			return count;
		}
		return rec_count_digit(num/10,count+1);
	}
	
	public static int rec_arm(int num, int res, int digit) {
		if(num == 0) {
			return res;
		}
		return rec_arm(num/10,res + (int)Math.pow(num%10, digit), digit);
	}

	public static void main(String[] args) {
		int num = 153;
		int count = 0;
		int digit = rec_count_digit(num,count);
		int res = rec_arm(num, 0, digit);
		if(res == num) {
			System.out.println("its armstrong");
		}
		else {
			System.out.println("its not");
		}
		
		
	}

}
