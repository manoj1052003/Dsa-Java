package com.sepnov;

import java.util.Arrays;

public class num1 {
	
	
	
	public static String rev(String s) {
		String res = "";
		for(int i=s.length()-1; i>=0; i--) {
			res = res + s.charAt(i);
		}
		return res;
	}

	
	
	
	public static void find_res(String[] arr) { //["esala","cup","namde"]
		for(int i=arr.length-1; i>=0; i--) {
			String word = arr[i];   // word = namde
			String res = "";
			for(int j=0; j<word.length(); j++) {
				char ch = word.charAt(j);
				if(j==0 || j==word.length()-1) {
					res = res + (char)(ch-32);
					
				}
				else {
					res = res + ch;
				}
				
			}
			System.out.print(res+" ");
			
		}
	}
	
	public static void main(String[] args) {

		String s = "esala cup namde";
		String [] arr = s.split(" "); //["esala","cup","namde"]
		find_res(arr);
		
		
	

	}

}
