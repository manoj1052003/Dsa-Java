package com.basics;

public class Class2 {

	public static void main(String[] args) {
		int [] arr = {-1,-4,-6,-3};
		int max = 0;
		for(int i=0; i<arr.length; i++) {
			for(int j=i; j<arr.length; j++) {
				int sum = 0;
				for(int k=i; k<=j; k++) {
					sum = sum + arr[k];
				}
				//System.out.println(sum);
				if(sum > max) {
					max = sum;
				}
				//System.out.println();
			}
		}
		System.out.println(max);
		
	
	}
}
