package com.sepnov;

import java.util.Arrays;

public class num1 {

	public static void main(String[] args) {
		int [] arr = {-5,2,7,-4,12};
		int sum = arr[0];
		int max = sum;
		for(int i=1; i<arr.length; i++) {
			sum+=arr[i];
			if(sum<0) {
				sum = 0;
			}
			max = Math.max(max, sum);
		}
		System.out.println(max);
		

	}

}
