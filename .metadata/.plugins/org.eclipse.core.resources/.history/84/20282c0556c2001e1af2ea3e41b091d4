package com.novdec.number;

public class recreverse {
	
	public static int reverse(int num,int res) {
		if (num==0) {
			return res;
		}
		return reverse(num/10,(res+(num%10)));
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num =123;
		int res = 0;
		int ans = reverse(num,res);
		System.out.println(ans);

	}

}
