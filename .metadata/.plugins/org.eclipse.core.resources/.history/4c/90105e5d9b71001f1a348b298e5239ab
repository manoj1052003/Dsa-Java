package com.august;

public class eleventhclas {
	
	public static int reverse(int num) {
		int res = 0;
		while(num!=0) {
			int rem = num % 10;
			res = (res * 10)+rem;
			num= num / 10;
		}

		return res;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int rows = 5;
		for(int i=1; i<=rows; i++) {
			for(int j=1; j<rows*2; j++) {
				if(i+j==rows+1 || j-i==rows-1) {
					System.out.print(i+" ");
				}
				else {
					System.out.print(" "+" ");
				}
			}
			System.out.println();
		}
		
	}

}
