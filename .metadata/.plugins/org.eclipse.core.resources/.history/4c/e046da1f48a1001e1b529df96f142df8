package com.arrays;

public class linearsearch {
	
	static int search(int[] arr, int max1, int max2) {
		
		for (int i = 0; i<arr.length; i++) {
			
			if (arr[i]>max1) {
				
				max2 = max1;
				max1 = arr[i];
			}
			
			if( arr[i]> max2) {
				max2= arr[i];	
			}
		}
		return max2;
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int [] arr= {-10,-20,-30,-40};
		int max1 = arr[0];
		int max2 = arr[1];
		
		if (arr[0] > arr[1]) {
			max1 = arr[0];
		}
		else {
			
			max2 = arr[1];	
		}
		
		int res = search(arr,max1,max2);
		System.out.println(res);

	}

}
