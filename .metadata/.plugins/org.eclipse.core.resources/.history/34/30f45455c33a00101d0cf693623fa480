package com.deque.doubleended;

class Node{
	int data;
	Node next;
	Node prev;
	
	Node(int data){
		this.data = data;
		this.next = null;
		this.prev = null;
	}
}

class deque{
	Node front;
	Node rear;
	
	public void add_first(int ele) {
		Node temp = new Node(ele);
		if(front == null) {
			front = temp;
			rear = temp;
			return;
		}
		temp.next = front;
		front.prev = temp;
		front = temp;
	}
	
	public void add_last(int ele) {
		Node temp = new Node(ele);
		if(rear == null) {
			front = temp;
			rear = temp;
			return;
		}
		rear.next = temp;
		temp.prev = rear;
		rear = temp;
	}
	
	public int delete_first() {
	    if (front == null) {
	    	return -1;
	    }
	    int val = front.data;
	    front = front.next;
	    if (front == null) {// when there is only one Node
	        rear = null;
	    } 
	    else {
	        front.prev = null;
	    }
	    return val;
	}

	
	public int delete_last() {
	    if (rear == null) {
	    	return -1;
	    } 
	    int val = rear.data;
	    rear = rear.prev;
	    if (rear == null) {// when there is only one Node
	        front = null;
	    } 
	    else {
	        rear.next = null;
	    }
	    return val;
	}
	
	public int peek() {
		if(rear == null) {
			System.out.println("stack is empty");
			return -1;
		}
		return rear.data;
	}
	
	public void print() {
		if(front == null) {
			System.out.println("queue is empty");
			return ;
		}
		Node curr = front;
		while(curr != null) {
			System.out.print(curr.data+" ");
			curr = curr.next;
		}
		System.out.println();
	}

}


public class mysyack {
	
	deque d ;
	
	public void push(int ele) {
		d.add_last(ele);
	}
	
	public int pop() {
		int val = d.delete_last();
		if(val == -1) {
			System.out.println("queue is already empty");
			return -1;
		}
		return val;
	}
	
	public int peek() {
		return d.peek();
	}
	
	public void display() {
		
	}

	public static void main(String[] args) {
		mysyack st = new mysyack();
		st.push(10);
		st.push(20);
		st.peek();

	}

}
