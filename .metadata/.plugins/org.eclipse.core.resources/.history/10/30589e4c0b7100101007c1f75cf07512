package com.basicop;

public class Class1assign {
	
	public static int rec_count_digit(int num,int count) {
		if(num == 0) {
			return count;
		}
		return rec_count_digit(num/10,count+1);
	}
	
	public static int rec_arm(int num, int res, int digit) {
		if(num == 0) {
			return res;
		}
		return rec_arm(num/10,res + (int)Math.pow(num%10, digit), digit);
	}
	
	
	public static int  rec_fact1(int num, int res) {
		if(num==0) {
			return res;
		}
		return rec_fact1(num-1, res*num);
	}
	
	public static int rec_fact2(int num) {
		if(num == 1) {
			return 1;
		}
		return num * rec_fact2(num-1);
	}

	public static void main(String[] args) {
		int res = rec_fact2(5);
		System.out.println(res);
		
		
	}

}
