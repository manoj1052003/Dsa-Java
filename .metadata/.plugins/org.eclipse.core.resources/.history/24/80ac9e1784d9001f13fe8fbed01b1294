package com.emp.app;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.Scanner;

public class empdata {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Connection con = null;
		Statement st = null;
		ResultSet rs = null;
		String url = "jdbc:mysql://127.0.0.1:3306/company_1";
		String user = "root";
		String pass = "tiger";
		Scanner sc = new Scanner(System.in);
		System.out.println("enter eid");
		String ed = sc.nextLine();
		String querry = "SELECT * FROM EMP WHERE EID ="+ed;
		
		try {
			Class.forName("com.mysql.cj.jdbc.Driver");
			
			con = DriverManager.getConnection(url, user, pass);
			
			st = con.createStatement();
			
			// rs will use to extract the data from cursor or buffer memory
			rs = st.executeQuery(querry);
			
			
			// executequery to execute DQL qrery
			
			while(!rs.next()) {
				System.out.println("not a proper data");
			}
			
			while(rs.next()) {
				//.next will help to check the data present in that row or not
				System.out.print(rs.getInt("EID")+" ");
				System.out.print(rs.getString("FNAME")+" ");
				System.out.print(rs.getString("JOB")+" ");
				System.out.println(rs.getDouble("SAL")+" ");
				
			}
			
			//object 
			//System.out.println(rs);
			
			
		}
		catch (ClassNotFoundException | SQLException e) {
			
			e.printStackTrace();
		}
	}

}
