class AdjList{
	int Nodes;
	ArrayList<ArrayList<Integer>> list;
	AdjList(int Nodes) {
		this.Nodes = Nodes;
		list = new ArrayList<>();
		for(int i=0; i<Nodes; i++) {
			list.add(new ArrayList<>());
		}
	}
	
	public void add_edge(int src, int des) {
		list.get(src).add(des);
		list.get(des).add(src);
	}
	
	public void print() {
		for(int i=0; i<list.size(); i++) {
			System.out.print(i +"--->");
			System.out.println(list.get(i));
		}
	}
	
	public void BFS(int root) {
		boolean[] visited = new boolean[nodes];
		Queue<Integer> q = new LinkedList<>();
		q.add(root);
		
		System.out.println(Arrays.toString(visited));
		while(!q.isEmpty()) {
			int val = q.poll();
			visited[val] = true;
			System.out.print(val+" ");
			for(int data : list.get(val)) {
				if(visited[data] == false) {
					q.add(data);
					visited[data] = true;
				}
			}
			
		}
	}
	
}

public class Second {

	public static void main(String[] args) {
		AdjList am = new AdjList(6);
		am.add_edge(0, 1);
		am.add_edge(0, 2);
		am.add_edge(1, 3);
		am.add_edge(1, 4);
		am.add_edge(2, 4);
		am.add_edge(4, 5);
		am.add_edge(3, 5);
		am.BFS(0);

	}

}
