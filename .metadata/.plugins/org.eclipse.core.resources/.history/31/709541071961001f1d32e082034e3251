package com.july;

public class maxsumofsubarray {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr[] = {-7,2,4,-3,5,1,6};
		int res = 0;
		int k = 3;
		for(int i=0; i<k; i++) {
			res=res + arr[i];
		}
		int max = res;
		for(int i=0; i<=arr.length-k; i++) {
			int sum = 0;
			for(int j=i; j<i+k;j++) {
				sum+=arr[j];
			}
			if(sum>max) {
				max=sum;
			}	
		}
		System.out.println(max);
		
	}

}
