package com.june;

public class subarray1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr [] = {-1,2,-3,4,-5,6,-7};
		int max = arr[0];
		int k = 2;//subarray size;
		for(int i=0; i<arr.length-k+1; i++) {
			int sum = 0;
			for(int j=i; j<i+k;j++) {
				sum+=arr[j];
//				if(sum>max)
//					max = sum;
			}
			System.out.println(sum);
		}
		//System.out.println(sum);
	}

}
