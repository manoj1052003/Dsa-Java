package com.jan26;

import java.util.Arrays;

public class class14num4 {
	
	public static int b_search(int [] arr, int key) {
		int low = 0;
		int high = arr.length-1;
		while(low<=high) {
			int mid = (low+high)/2;
			if(arr[mid]  == key) {
				return mid;
			}
			else if(key > mid) {
				low = mid + 1;
			}
			else {
				high = mid - 1;
			}
		}
		return -1;
	}
	
	public static void main(String[] args) {
			int [] arr = {2,4,6,20,24,30,32,39};
			int key = 39;
			int ind = b_search(arr,key);
			System.out.println(ind);
		
	}

}
