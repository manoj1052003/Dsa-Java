package com.august;

public class eleventhclas {
	
	public static int find_digit_rec(int num, int digit) {
		if(num==0) {
			return digit;
		}
		return  find_digit_rec(num/10,digit+=1);
	}
	
	public static int rec_arm(int num,int res,int digit) {
		if(num==0) {
			return res;
		}
		return rec_arm(num/10,(int)Math.pow(num%10, digit)+res,digit);
	}

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int num = 153;
		int res = 0;
		int digit = find_digit_rec(num,0);
		int res1 = rec_arm(num,res,digit);
		if(res1==num) {
			System.out.println("arms");
		}
		else {
			System.out.println("not");
		}
		
		
		
		
	}

}
