package com.pattern;

public class impresscrush {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		int rows = 6;
		int col = 7;
		
		for (int i =0; i<rows; i++) {
			for (int j = 0; j < col; j++) {	
				if ((i==1 && j%3==0) || (i==0 && j%3!=0) || (i-j==2) || (i+j==8)){	
					System.out.print("*"+" ");
				}
				else if(i==2 && j==2) {
					System.out.print("M"+" ");
				}
				else if(i==2 && j==3) {
					System.out.print("O"+" ");
				}
				else if(i==2 && j==4) {
					System.out.print("N"+" ");
				}
				else {
					
					System.out.print(" "+" ");
				}	
			}
			System.out.println();
		}
	
	}

}
