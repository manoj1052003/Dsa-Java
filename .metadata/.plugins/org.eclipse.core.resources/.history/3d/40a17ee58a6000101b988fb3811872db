package com.basic;

import java.util.Arrays;

public class Logicalopr {
	
	public static String reverse(String s) {
		String res = "";
		for(int i=s.length()-1; i>=0; i--) {
			if(i == 0 || i==s.length()-1) {
				res += (char)(s.charAt(i)-32);
			}
			else {
				res += (s.charAt(i));
			}
		}
		return res;
	}

	public static void main(String[] args) {
		String s = "india is my country";

	}

}
