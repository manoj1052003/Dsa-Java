package com.novdec.array;

public class maxsum {
	
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int [] arr= {2,4,6,8,9,6,4,2,8};
		int k = 3;
		int sum = 0;
		int max_sum = 0;
		for (int i =0; i<arr.length-k; i++) {
			for (int j=i; j<k;j++) {
				sum = sum + arr[j];
			max_sum =Math.max(sum,max_sum);	
			}
		}
		System.out.println(max_sum);
	}

}
