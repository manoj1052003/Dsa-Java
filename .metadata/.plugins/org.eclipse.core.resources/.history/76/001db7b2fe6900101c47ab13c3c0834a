package com.basicop;

import java.util.Arrays;
import java.util.Scanner;

public class Class1assign {
	
	public static int l_search(int [] arr, int key) {
		for(int i=0; i<arr.length; i++) {
			if(arr[i] == key) {
				return i;
			}
		}
		return -1;
	}
	
	public static int b_search(int [] arr, int key) {
		int low = 0;
		int high = arr.length-1;
		while(low <= high) {
			int mid = (low + high) / 2;
			if(arr[mid] == key) {
				return mid;
			}
			else if(key > arr[mid]) {
				low = mid + 1;
			}
			else {
				high = mid - 1;
			}
		}
		return -1;
	}

	public static void main(String[] args) {
		int [] arr = {18,7,17,65,48,1};
		int key = 17;
		int ind = b_search(arr, key);
		System.out.println(ind);
		
		
	}

}
