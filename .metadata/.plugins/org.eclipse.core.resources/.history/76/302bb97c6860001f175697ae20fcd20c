package com.june;

public class subarray1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int arr [] = {1,2,3,4,5,6,7};
		int max = arr[0];
		for(int i=0; i<arr.length; i++) {
			int sum = 0;
			for(int j=i; j<arr.length;j++) {
				sum+=arr[j];
				if(sum>max)
					max = sum;
			}
		}
		System.out.println(max);
	}

}
