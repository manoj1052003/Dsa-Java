package com.csll;

class Node{
	int data;
	Node next;
	
	Node(int data){
		this.data = data;
		this.next = null;
	}
}

class CLL{
	
	Node head;
	
	public void add_last(int data) {
		Node temp = new Node(data);
		if(head == null) {
			head = temp;
			temp.next = head;
		}
		else {
			Node curr = head;
			while(curr.next != head) {
				curr = curr.next;
			}
			temp.next = head;
			curr.next = temp;
		}
	}
	
	public void add_first(int data) {
		Node temp = new Node(data);
		if(head == null) {
			head = temp;
			temp.next = head;
		}
		else {
			Node curr = head;
			while(curr.next != head) {
				curr = curr.next;
			}
			temp.next = head;
			curr.next = temp;
			head = temp;
		}
	}
	
	public void delete_first() {
		if(head == null) {
			System.out.println("ll is empty");
			return;
		}
		if(head.next == head) {
			head = null;
		}
		else {
			Node curr = head;
			while(curr.next != head) {
				curr = curr.next; 
			}
			curr.next = head.next;
			head = head.next;
		}
	}
	
	public void delete_last() {
		if(head == null) {
			System.out.println("ll is empty");
			return;
		}
		if(head.next == head) {
			head = null;
		}
		else {
			Node curr = head;
			while(curr.next.next != head) {
				curr = curr.next; 
			}
			curr.next = head;
			
		}
	}
	
	public void print() {
		Node curr = head;
		if(head == null) {
			System.out.println("ll is empty");
			return;
		}
		do {
			System.out.print(curr.data+" ");
			curr = curr.next;
		}
		while(curr != head);
		System.out.println();
	}
}

public class First {

	public static void main(String[] args) {
		
		CLL cll = new CLL();
		cll.add_first(10);
		cll.add_last(20);
		cll.add_last(30);
		cll.add_first(40);
		cll.print();
	}

}
