package com.jan26;

import java.util.Arrays;

public class class14num4 {
	
	public static String rev(String s) {
		String res1 = "";
		for(int i=0; i<s.length(); i++) {
			res1 = s.charAt(i) + res1; 
		}
		return res1;
	}
	
	
	public static void main(String[] args) {
		String s = "malayalamaaaaa";
		int l_len = 0;
		String l_string = "";
		for(int i=0; i<s.length(); i++) {
			String res = "";
			for(int j=i; j<s.length(); j++) {
				res = res + s.charAt(j);
				if(res.equals(rev(res))) {
					if(res.length() > l_len) {
						l_len = res.length();
						l_string = res;
					}
				}
				
			}
		}
		System.out.println(l_string);
		System.out.println(l_len);
		
		
	}

}
