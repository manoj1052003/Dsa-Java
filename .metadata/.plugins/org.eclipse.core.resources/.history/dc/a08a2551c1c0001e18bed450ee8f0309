package com.novdec.number;

public class happynum {
	
	public static int check_happy(int num) {
		int sum = 0;
		while(num>0) {
			int rem = num % 10;
			sum = (rem*rem)+sum ;
			num = num / 10;
		}
		return sum;
	}
	
	public static void main(String[] args) {
		int num = 8;
		int res = check_happy(num);
		while(res!=1 && res!=4) {
			res = check_happy(res);
		}
		if (res==1) {
			System.out.println("happy number");
		}
		else {
			System.out.println("its sad number");
		}
		
		
	}
}
