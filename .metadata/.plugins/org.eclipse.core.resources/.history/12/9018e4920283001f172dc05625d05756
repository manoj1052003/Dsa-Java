package com.june19;
import java.util.*;
public class occur {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		String s = "malayalam";
		int [] res = new int[130];
		for(int i=0; i<s.length(); i++) {
			char ch  = s.charAt(i);
			res[ch] = res[ch] + 1;
		}
		System.out.println(Arrays.toString(res));
		for(int i=0; i<res.length;i++) {
			if(res[i]>0) {
				System.out.println((char)i+"--->"+res[i]);
			}
		}
		
		
	}

}
